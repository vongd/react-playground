{
  "name": "reddit-better",
  "version": "0.1.0",
  "repository": "https://github.com/joshuaegclark/reddit-better",
  "description": "Prototype for a better Reddit experience that doesn't drain battery on mobile.",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run clean:js && npm run webpack",
    "build:watch": "npm run clean:js && npm run webpack:watch",
    "clean": "npm run clean:js && npm run clean:deps",
    "clean:deps": "rimraf node_modules",
    "clean:js": "rimraf dist",
    "start": "http-server -p 8080",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "webpack --progress --colors",
    "webpack:watch": "webpack --progress --colors --watch"
  },
  "keywords": [
    "react",
    "reddit"
  ],
  "author": "Write Wrecked Software",
  "license": "MIT",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "webpack": "^1.13.0"
  },
  "devDependencies": {
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "css-loader": "^0.23.1",
    "http-server": "^0.9.0",
    "node-sass": "^3.7.0",
    "rimraf": "^2.5.2",
    "sass-loader": "^3.2.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0"
  }
}
